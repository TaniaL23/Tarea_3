@model Tarea_3.Models.MascotaModel
@{
    ViewData["Title"] = "Registro de Mascota";
}

<div class="container mt-5">
    <div class="d-flex justify-content-between align-items-center mb-3">
        <h2 class="text-primary">Registro de Mascota</h2>
        <a href="@Url.Action("NuevoProducto", "Productos")" class="btn btn-outline-success shadow-sm">
            <i class="bi bi-plus-lg"></i> Nuevo Producto
        </a>
    </div>

    <div class="card shadow-sm">
        <div class="card-body bg-light">
            <form asp-action="Index" method="post" novalidate>
                <div class="mb-3">
                    <label asp-for="Nombre" class="form-label"></label>
                    <input asp-for="Nombre" class="form-control" />
                    <span asp-validation-for="Nombre" class="text-danger"></span>
                </div>

                <div class="mb-3">
                    <label asp-for="Tipo" class="form-label"></label>
                    <input asp-for="Tipo" class="form-control" />
                    <span asp-validation-for="Tipo" class="text-danger"></span>
                </div>

                <div class="mb-3">
                    <label asp-for="Edad" class="form-label"></label>
                    <input asp-for="Edad" type="number" class="form-control" />
                    <span asp-validation-for="Edad" class="text-danger"></span>
                </div>

                <button type="submit" class="btn btn-primary w-100">Registrar Mascota</button>
            </form>

            @if (ViewBag.Mensaje != null)
            {
                <div class="alert alert-success mt-4" role="alert">
                    @ViewBag.Mensaje
                </div>
            }
        </div>
    </div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
