@model Tarea_3.Models.MascotaModel
@{
    ViewData["Title"] = "Registro de Mascota";
}

<div class="container mt-5">
    <div class="d-flex justify-content-between align-items-center mb-4">
        <h2 class="text-primary fw-bold"><i class="bi bi-paw me-2"></i>Registro de Mascota</h2>
        <a href="@Url.Action("NuevoProducto", "Productos")" class="btn btn-outline-success shadow-sm d-flex align-items-center">
            <i class="bi bi-plus-lg me-1"></i> Nuevo Producto
        </a>
    </div>

    <div class="card shadow-sm border-0">
        <div class="card-body bg-light p-4">
            @if (ViewBag.Mensaje != null)
            {
                <div class="alert alert-success rounded-3" role="alert">
                    @ViewBag.Mensaje
                </div>
            }

            <form asp-action="Index" method="post" novalidate class="needs-validation">
                <div class="mb-3">
                    <label asp-for="Nombre" class="form-label fw-semibold">Nombre del dueño</label>
                    <input asp-for="Nombre" class="form-control @(ViewData.ModelState["Nombre"]?.Errors.Count > 0 ? "is-invalid" : "")" placeholder="Ejemplo: Tania" />
                    <span asp-validation-for="Nombre" class="invalid-feedback"></span>
                </div>

                <div class="mb-3">
                    <label asp-for="Tipo" class="form-label fw-semibold">Tipo de mascota</label>
                    <input asp-for="Tipo" class="form-control @(ViewData.ModelState["Tipo"]?.Errors.Count > 0 ? "is-invalid" : "")" placeholder="Ejemplo: Perro, Gato" />
                    <span asp-validation-for="Tipo" class="invalid-feedback"></span>
                </div>

                <div class="mb-4">
                    <label asp-for="Edad" class="form-label fw-semibold">Edad (años)</label>
                    <input asp-for="Edad" type="number" min="0" class="form-control @(ViewData.ModelState["Edad"]?.Errors.Count > 0 ? "is-invalid" : "")" placeholder="Ejemplo: 3" />
                    <span asp-validation-for="Edad" class="invalid-feedback"></span>
                </div>

                <button type="submit" class="btn btn-primary w-100 shadow-sm fs-5">
                    <i class="bi bi-check2-circle me-2"></i> Registrar Mascota
                </button>
            </form>
        </div>
    </div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />

    <script>
        (() => {
            'use strict';
            const forms = document.querySelectorAll('.needs-validation');
            Array.from(forms).forEach(form => {
                form.addEventListener('submit', event => {
                    if (!form.checkValidity()) {
                        event.preventDefault();
                        event.stopPropagation();
                    }
                    form.classList.add('was-validated');
                }, false);
            });
        })();
    </script>
}
